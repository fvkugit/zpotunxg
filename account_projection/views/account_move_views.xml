<odoo>
    <record id="view_move_form_inherit_account_projection" model="ir.ui.view">
        <field name="name">account.move.form.account.projection</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_open_projection_wizard" type="object" string="Link Projection" class="oe_highlight" attrs="{'invisible': [('projection_match_ids','=',[])]}"/>
            </header>
            <xpath expr="//sheet" position="inside">
                <div class="alert alert-info" attrs="{'invisible': [('projection_match_ids','=',[])]}">
                    <span t-translate="True">Matching projections found. Use the Link Projection button to link.</span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
